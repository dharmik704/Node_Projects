<%- include('header') %>

            <!-- Table Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-12">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">View Admins</h6>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Gender</th>
                                        <th scope="col">Hobby</th>
                                        <th scope="col">City</th>
                                        <th scope="col">Address</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(ad of admindata){ %> 
                                    <tr>
                                        <td scope="row"><img src="<%= ad.image %>" alt="image" width="50" style="border-radius: 50%;"></td>
                                        <td style="padding: 20px 7px;"><%= ad.name %></td>
                                        <td style="padding: 20px 7px;"><%= ad.email %></td>
                                        <td style="padding: 20px 7px;"><%= ad.gender %></td>
                                        <td style="padding: 20px 7px;"><%= ad.hobby %></td>
                                        <td style="padding: 20px 7px;"><%= ad.city %></td>
                                        <td style="padding: 20px 7px;"><%= ad.address %></td>
                                        <td style="padding: 20px 7px;">
                                            <% if(ad.status){ %> 
                                                <a href="/admin/deactive/<%= ad.id %>" class="text-success">Active</a>
                                            <% }else{ %> 
                                                <a href="/admin/active/<%= ad.id %>" class="text-danger">Deactive</a>
                                            <% } %>
                                        </td>
                                        <td style="padding: 20px 7px;">
                                            <a href="/admin/deleteadmin/?id=<%= ad.id %>" data-bs-toggle="modal" data-bs-target="#exampleModal<%= ad.id %>" style="color: rgb(255, 83, 83);"><i class="fa fa-trash"></i></a>
                                            <a href="/admin/updateadmin/?id=<%= ad.id %>" style="color: rgb(0 156 255);"><i class="fa fa-edit ms-3"></i></a>
                                        </td>
                                    </tr>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal<%= ad.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Confirmation</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                Are you sure you want to delete this item? 
                                                </div>
                                                <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-danger"><a href="/admin/deleteadmin/?id=<%= ad.id %>" class="text-white">Delete</a></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>  

                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table End -->

<%- include('footer') %>