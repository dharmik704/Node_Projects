<%- include('doctor_header') %>

            <!-- Table Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                          <div class="card-body">
                            <h4 class="card-title">View Patients</h4>
                            <div class="table-responsive">
                              <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">No.</th>
                                        <th scope="col">User Name</th>
                                        <th scope="col">Appointdate Date</th>
                                        <th scope="col">Patient Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">Gender</th>
                                        <th scope="col">Age</th>
                                        <!-- <th scope="col">Status</th> -->
                                        <th colspan="2" scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var i=1 %>
                                    <% for(pdata of pdata){ %> 
                                    <tr>
                                        <th style="padding: 20px 10px;"><%= i++ %></th>
                                        <td style="padding: 20px 7px;"><%= pdata.appointmentid.name %></td>
                                        <td style="padding: 20px 7px;"><%= pdata.appointmentid.date %></td>
                                        <td style="padding: 20px 7px;"><%= pdata.name %></td>
                                        <td style="padding: 20px 7px;"><%= pdata.email %></td>
                                        <td style="padding: 20px 7px;"><%= pdata.phone %></td>
                                        <td style="padding: 20px 7px;"><%= pdata.gender %></td>
                                        <td style="padding: 20px 7px;"><%= pdata.age %></td>
                                        <td style="padding: 20px 7px;">
                                            <a href="/doctor/showpatientdetails/<%= pdata.id %>" style="color: rgb(0 156 255);"><i class="far fa-eye"></i></a>
                                            <a href="/doctor/deleteadmin/<%= pdata.id %>" data-bs-toggle="modal" data-bs-target="#exampleModal<%= pdata.id %>" style="color: rgb(255, 83, 83);"><i class="fa fa-trash ms-3"></i></a>
                                            <!-- <a href="/admin/updateadmin/?id=<%= pdata.id %>" style="color: rgb(0 156 255);"><i class="fa fa-edit ms-3"></i></a> -->
                                        </td>
                                    </tr>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModal<%= pdata.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Confirmation</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                Are you sure you want to delete this item? 
                                                </div>
                                                <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-danger"><a href="/admin/deleteadmin/?id=<%= pdata.id %>" class="text-white">Delete</a></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>  

                                    <% } %>
                                </tbody>
                              </table>
                            </div>
                          </div>
                        </div>
                      </div>
                </div>
            </div>
            <!-- Table End -->

<%- include('doctor_footer') %>